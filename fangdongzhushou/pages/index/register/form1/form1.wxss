.formLogoPd image{ width: 140rpx; height: 97rpx; display: block; margin-bottom:20rpx;}

/*表单样式*/
.uploadLine{ padding: 40rpx 0 30rpx; border-bottom: 1px solid #EEF0F4; position: relative;}
.uploadLineFlex{display: flex; flex-direction: row;}
.upLoadTitleText{ color:#001629; font-size: 24rpx; display: block; margin-bottom: 20rpx;}
.threeWidth{ margin: 0 50rpx; width: 200rpx;}
.threeWidth text{ text-align: center;}
input,.phcolorPreHover,textarea{color: #5C6068; font-size: 32rpx; }
