.registerBtn{ text-align: right; margin-top: 90rpx;}
.registerBtn text{ float: right; display: block; width:188rpx;height:72rpx; line-height: 72rpx; text-align: center;background:rgba(88,118,171,1);box-shadow:0px 8rpx 20rpx 0px rgba(96,147,236,0.5);border-radius:36rpx; color: #fff; font-size: 32rpx; margin-bottom: 70rpx;}

