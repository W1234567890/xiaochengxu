@import '/pages/index/register/form3/form3.wxss';
.registerViewGreyBg{width:750rpx;height:273rpx; padding-top: 14rpx; background:linear-gradient(270deg,rgba(255,255,255,1) 0%,rgba(238,240,244,1) 100%);}
.registerViewBg{ position: relative;}
.registerViewBg image.registerImgBg{ width: 100%; height: 190rpx; display: block;}
.registerViewMsg{ color: #fff; position: absolute; left: 30rpx; top:53rpx;}
.registerViewMsgTitle{ font-size: 40rpx; margin-bottom: 24rpx;overflow: hidden;/*超出部分隐藏*/white-space: nowrap;/*不换行*/text-overflow:ellipsis;/*超出部分文字以...显示*/}
.upLoadTitleTextBlue{ font-size: 24rpx; height: 26rpx; color: #5876AB; margin-bottom: 30rpx;}
.upLoadTitleTextBlue view{height:18rpx;border-left: 4rpx solid #5876AB; padding-left: 16rpx; display: inline-block; }
.registerViewText{ font-size:24rpx; color: #001629; }
.registerViewMsgNei{ font-size: 24rpx;}
.registerImgTel{ width: 156rpx; height: 156rpx; position: absolute; right: 18rpx; top: 112rpx;}
.registerViewTitle{ color:#001629; font-size: 40rpx; margin-top: 30rpx; }
.registerViewTitle text{ font-size: 24rpx; display: inline-block; margin-left: 12rpx;}
.registerPrice{ position: absolute; right: 0; top:-10rpx; font-size: 24rpx; color: #001629;}
.registerPrice view{width:192rpx;height:58rpx; line-height: 58rpx; display: inline-block; padding:0 20rpx;background:rgba(243,244,247,0.5);border-radius:4px; margin-right: 26rpx;}

.registerViewOtherPricePd{ margin: 0 20rpx;}
.registerViewOtherPrice{ position: relative;}
.registerViewOtherPrice .upLoadTitleText{ font-size: 32rpx; color: #5C6068;}


.reservePd{height:81rpx; line-height: 81rpx;}
.reservePd view{ color: #8A8E98; font-size: 36rpx; display: inline-block; margin: 0 35rpx; position: relative;}
.reservePd view.cur{ color: #5876AB;}
.reservePd view.cur text{width:30rpx;height:4rpx;background:rgba(88,118,171,1);border-radius:3rpx; position: absolute; left: 50%; bottom:0rpx; margin-left: -15rpx;}

/*账单样式*/
.billListPd{ margin: 30rpx 30rpx 110rpx;}
.billList{width:690rpx;background:rgba(255,255,255,1);box-shadow:0px 0px 16rpx 0px rgba(96,147,236,0.2);border-radius:8rpx; padding-top: 6rpx; margin:0 0 24rpx;}
.billListPrice{ display: flex; flex-direction: row;  position: relative; margin: 0 30rpx; border-bottom: 1px solid #EEF0F4; width: 630rpx;}
.billLine{ border-left:4rpx solid #DC4645; height: 124rpx; margin-left: -26rpx; }
.billPrice{ font-size: 42rpx; color: #001629; margin-top: 24rpx; margin-left: 26rpx;}
.billPrice view{ color: #8A8E98; font-size: 22rpx; margin-top: 4rpx;}
.dateList{ color: #6083B4; font-size:28rpx; position: absolute; right: 0; top:30rpx; text-align: right;}
.dateList view{ color: #8A8E98; font-size: 22rpx; margin-top: 7rpx;}

.billPriceListPd{ padding: 12rpx 30rpx 76rpx; position: relative;}
.billPriceList{ color: #5C6068; font-size: 28rpx; margin-top: 18rpx; position: relative;}
.billPriceList text{ position: absolute; right: 0; top: 0;}
.billPriceListTiltle{ margin-top: 30rpx; color:#001629; font-size: 22rpx; }
.billCard{width:168rpx;height:50rpx;line-height:50rpx; border-radius:100rpx 0px 0px 0px; position: absolute; right: 0; bottom: 0; color: #fff; font-size: 26rpx; text-align: center;}
.billCardRed{background:rgba(220,70,69,1);}
.billCardBlue{background:rgba(88,118,171,1);}
.billCardGrey{background:rgba(192,194,199,1);}
.btnBill{ width: 750rpx;height:88rpx; position: fixed; left: 0; bottom: 0; display: flex;flex-direction: row;}
.btnBill view{ font-size: 30rpx; text-align: center;height:88rpx; line-height: 88rpx; width: 50%; }
.btnBill view.btnBillLeft{color:#5C6068; background: #fff; border-radius:24rpx 0rpx 0px 0px;border:1px solid rgba(222,224,229,1);}
.btnBill view.btnBillLeft.greyBtn{ background: #EEF0F4; color:rgba(92,96,104,0.5); }
.btnBill view.btnBillRight{ color: #fff; background:rgba(88,118,171,1);border-radius:0px 24rpx 0px 0px;}
