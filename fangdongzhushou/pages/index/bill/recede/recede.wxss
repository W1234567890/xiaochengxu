.recedePd{ margin-top: 40rpx;width:690rpx;background:rgba(255,255,255,1);box-shadow:0px 0px 16rpx 0px rgba(96,147,236,0.2);border-radius:8rpx; padding:30rpx 0 78rpx; position: relative;}
.recedeTitle{ color: #001629; font-size: 36rpx; margin-left: -30rpx;}
.recedeTitle text{ display: inline-block; height: 36rpx; border-left: 4rpx solid #DC4645; margin:-7rpx 26rpx 0 0; vertical-align: middle; }
.recedeMsg{ color: #5C6068; font-size: 24rpx; margin-top: 16rpx;}
.recedeTenant{width:198rpx;height:50rpx;text-align: center; line-height: 50rpx;background:rgba(88,118,171,1);border-radius:100rpx 0px 0px 0px; position: absolute; right: 0; bottom: 0; color: #fff; font-size:26rpx;}

.recedeView{ margin-top: 35rpx; color: #001629; font-size: 28rpx; position: relative;}
.recedeView view.recedeViewRight{ position: absolute; right: 0; top:-5rpx;}
.picker image{ width:40rpx; height: 40rpx; vertical-align: middle; }
input,.phcolorPreHover,textarea{ color:#8A8E98; font-size: 28rpx;}

/*底部按钮*/
.btnBillBg{width:750rpx;background:linear-gradient(270deg,rgba(255,255,255,1) 0%,rgba(238,240,244,1) 100%); position: fixed; left: 0; bottom: 0;}
.pbillPointText{ padding: 24rpx 30rpx; color:#8A8E98; font-size: 26rpx;}
.btnBill{ width: 750rpx;height:88rpx; display: flex;flex-direction: row;}
.btnBill view{ font-size: 30rpx; text-align: center;height:88rpx; line-height: 88rpx; width: 50%; }
.btnBill view.btnBillLeft{color:#5C6068; background: #fff; border-radius:24rpx 0rpx 0px 0px;border:1px solid rgba(222,224,229,1);}
.btnBill view.btnBillRight{ color: #fff;background:linear-gradient(206deg,rgba(243,106,105,1) 0%,rgba(221,71,70,1) 100%);border-radius:0px 24rpx 0px 0px;}