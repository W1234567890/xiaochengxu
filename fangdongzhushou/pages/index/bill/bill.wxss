@import "/pages/index/register/register.wxss";
page{ width: 750rpx;}
.reservePd { text-align: left; width: 100%; border-bottom: 1px solid #DEE0E5;}
.reservePd view{margin: 0 30rpx; color: #8A8E98; font-size: 26rpx;}
.reservePd view.cur{ color:#001629; font-size: 32rpx; }
.reservePd view.cur text{background:rgba(0,22,41,1); bottom: 0rpx;}
.registerPd{background:rgba(255,255,255,1);box-shadow:0px 0px 16rpx 0px rgba(96,147,236,0.2);border-radius:4px; padding: 34rpx 0; margin-bottom: 26rpx;}
.registerList{background:none;box-shadow:none;border-radius:0px; padding: 0 30rpx;}
.registerLeft{ margin: 42rpx 24rpx 0 0;}
.rightTitle{color:#8A8E98; font-size: 24rpx; position: relative;}
.rightTitle text.leftBorder{ vertical-align: middle; border-left: 4rpx solid #DC4645; height: 24rpx; margin-right: 30rpx; display: inline-block;}
.dataBillRight{ position: absolute; right:30rpx; top: 0; font-size: 24rpx;}
.dataBillRight.billRed{ color: #DC4645;}
.dataBillRight.billGrey{ color: #C0C2C7;}
.dataBillRight.billImage{right: 17rpx; top: -20rpx;}
.dataBillRight.billImage image{ width: 141rpx;height: 141rpx; display: block;}
.dataTime{ display: inline-block; margin-left:6rpx; position: relative; text-align: center; line-height: 32rpx; }
.dataTime image{ width: 88rpx; height: 32rpx; display: block;}
.dataTime text{ color: #fff; font-size: 20rpx; position: absolute; left: 0; top: 0; width: 88rpx; height: 32rpx;text-align: center; line-height: 32rpx; display: block;}
.registerRight { margin-top: 42rpx;}
.rightData { margin: 0 0 16rpx; color: #001629; font-size: 30rpx;}
.rightAddressBill{ font-size: 22rpx; position: relative; color:#8A8E98; }
.rightAddressBill view{ position: absolute; right: 0; top:-13rpx; color: #001629; font-size: 42rpx;}
/*顶部红色区域*/
.redTop{ margin: 16rpx 30rpx; position: relative;}
.redTop image{ width: 690rpx; height: 190rpx; display: block;}
.redTopPd{ margin: 54rpx 9rpx; position: absolute; left: 0; top: 0; display: flex; flex-direction: row; width: 680rpx;}
.redTopPd view.redTopView{ width: 33.333%; text-align: center; font-size: 28rpx; color:rgba(255,255,255,0.6);}
.redTopPd view.redTopView view{ display: inline-block; margin: 0 auto; text-align: left;}
.redTopPd view.redTopView text{ display: block; margin-top: 18rpx; font-size: 29rpx; font-weight: bold;color:rgba(255,255,255,1);}