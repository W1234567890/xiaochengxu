form{padding-bottom: 60rpx;}
page{ background: #f5f5f5!important;}
/*房源展示*/
.listBg{ background: #fff; margin-top:20rpx; }
.listImgList{ margin-top: 0; background: none; padding: 30rpx 0;}
.listBanner{ margin: 0;}
.listAddress{ margin: 20rpx 0;}
.listNumText{ color: #20b7b6; font-size: 30rpx; vertical-align: middle;font-weight: bold; font-family: Arial;}
.listNumText text{ font-size: 24rpx; display: inline-block; margin-top: 4rpx;}
/*日历*/
.tui-picker-detail{ text-align: left; color: #666; font-size: 30rpx;}
.tui-picker-detail.grey{color: #ccc;}
picker{ position: absolute; right:25rpx; top: 50%; margin-top: -21rpx; width: 74%; height: 42rpx;}
