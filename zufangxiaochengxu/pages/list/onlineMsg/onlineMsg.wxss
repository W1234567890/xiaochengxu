.onlineMsgContainer {
  display: flex;
  flex-direction: column;
  margin: 30rpx 0;
}
.onlineMsgContainerMlr{padding: 0 30rpx;
  border-bottom: 1px solid #f5f5f5;}
.imgLeft {
  position: relative;
  /*border-bottom: 1px solid #e1e1e1;
